<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PatientHealthDetails"
    android:background="@drawable/main_header_selector">


    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="828dp"
        android:gravity="center"
        android:orientation="vertical"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:layout_width="416dp"
                    android:layout_height="290dp"
                    android:src="@drawable/healthimg3"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="457dp"
                    android:background="@drawable/bacground_item"
                    android:backgroundTint="#7876E2"
                    android:orientation="vertical">


                    />

                    <LinearLayout
                        android:layout_width="367dp"
                        android:layout_height="186dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/btn_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:gravity="center"
                            android:text="Body Temperature"
                            android:textColor="#131213"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/temp"
                                android:layout_width="wrap_content"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="right"
                                android:text="36.5"
                                android:textColor="#7876E1"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="left"
                                android:text=" Â°C"
                                android:textColor="#7876E1"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:src="@drawable/tempimg3" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="367dp"
                        android:layout_height="186dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/btn_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:gravity="center"
                            android:text="Blood pressure"
                            android:textColor="#131213"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bloodox"
                                android:layout_width="88dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="right"
                                android:text="72"
                                android:textColor="#7876E1"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="left"
                                android:text=" mmHg"
                                android:textColor="#7876E1"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:src="@drawable/tempimg3" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="367dp"
                        android:layout_height="186dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/btn_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:gravity="center"
                            android:text="Heart Rate"
                            android:textColor="#131213"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/heartrate"
                                android:layout_width="88dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="right"
                                android:text="60"
                                android:textColor="#7876E1"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="left"
                                android:text=" bpm"
                                android:textColor="#7876E1"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:src="@drawable/tempimg3" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="367dp"
                        android:layout_height="186dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/btn_background"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:gravity="center"
                            android:text="Blood O2 Level"
                            android:textColor="#131213"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bloodox2"
                                android:layout_width="88dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="right"
                                android:text="98"
                                android:textColor="#7876E1"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="116dp"
                                android:layout_marginTop="20sp"
                                android:gravity="left"
                                android:text=" %"
                                android:textColor="#7876E1"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="50dp"
                                android:src="@drawable/tempimg3" />
                        </LinearLayout>



                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <Button
                            android:id="@+id/aibtn"
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btnSubmit"
                            android:layout_marginBottom="36dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="25dp"

                            android:background="@drawable/delete_btn"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:text="Get AI Prediction"
                            app:backgroundTint="#9C27B0"
                            android:textColor="@color/white"
                            android:drawableTint="@color/black"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </LinearLayout>



                </LinearLayout>
            </ScrollView>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
